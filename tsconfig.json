{
  "compilerOptions": {
    "allowJs": false,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": ["ESNext"],
    "jsx": "react-jsx"
  },
}
